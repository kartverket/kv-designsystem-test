{
  "name": "@kv-design/tokens",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/green.css",
    "./*": "./dist/*"
  },
  "scripts": {
    "create": "designsystemet tokens create",
    "build": "pnpm clean && designsystemet tokens build -t ./src -o ./dist && pnpm copy-themes-to-storybook",
    "copy-themes-to-storybook": "cp ./dist/*.css ../@kv-design/react/public/style/",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@digdir/designsystemet": "catalog:",
    "rimraf": "catalog:"
  }
}
