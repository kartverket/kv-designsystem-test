{
  "name": "@kv-design/theme",
  "repository": {
    "type": "git",
    "url": "github:kartverket/kv-designsystem-test",
    "directory": "@kv-design/theme"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "default": "./dist/index.css"
    }
  },
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@digdir/designsystemet-types": "catalog:"
  },
  "devDependencies": {
    "@internal/build-tools": "workspace:*",
    "@kv-design/tokens": "workspace:*",
    "rimraf": "catalog:"
  },
  "scripts": {
    "copy-css": "cp ../../design-tokens/dist/*.* ./dist/ && mv ./dist/green.css ./dist/index.css && rm ./dist/colors.d.ts",
    "clean": "rimraf ./dist && mkdir ./dist",
    "build": "pnpm clean && pnpm copy-css"
  }
}
